{
  "name": "crm-lead-form-desktop",
  "version": "1.0.0",
  "description": "CRM Lead Form Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.crm.leadform",
    "productName": "CRM Lead Form",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/dist/**/*"
    ],
    "asarUnpack": [
      "backend/**/*",
      "frontend/dist/**/*"
    ]
  }
}
